<section class="container" id="annihilate-anchor">

{{!-- Updated columns for the have been/haven't been lists --}}
<section class="row">
  <div class="col-md-6">
    <h4>Burgers that <span class="underline">haven't been</span> annihilated:</h4>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
  </div>
  <div class="col-md-6">
    <h4>Burgers that <span class="underline">have been</span> annihilated:</h4>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
  </div>
</section>

<h2 id="add-burger">Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured status?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>


